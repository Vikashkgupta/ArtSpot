  }
}

@@keyframes umbral {
  0% {
    stop-color: #d3a5102e;
  }
  50% {
    stop-color: rgba(211, 165, 16, 0.519);
  }
  100% {
    stop-color: #d3a5102e;
  }
}
@@keyframes partciles {
  0%,
  100% {
    translate: 0px 16px;
  }
  50% {
